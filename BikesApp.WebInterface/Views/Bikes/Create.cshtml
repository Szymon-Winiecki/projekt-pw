@model SztuderWiniecki.BikesApp.Interfaces.IBike

@{
    ViewData["Title"] = "Create";
}

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>IBike</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select class="form-control selectpicker" asp-for="Type" name="Type" data-live-search="true">
                    @foreach (var type in ViewBag.Types)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Producer" class="control-label"></label>
                <select class="form-control selectpicker" asp-for="Producer" name="Producer" data-live-search="true">
                    @foreach (var producer in ViewBag.Producers)
                    {
                        <option value="@producer.Id">@producer.Name</option>
                    }
                </select>
                <span asp-validation-for="Producer" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-success">
                    <i class="me-2 bi bi-plus-square"></i>
                    <span>
                        Create
                    </span>
                </button>

                <a href="@Url.Action("Index", "Bikes")" class="btn btn-danger">
                    <i class="me-2 bi bi-box-arrow-in-right"></i>
                    <span>
                        Cancel
                    </span>
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
