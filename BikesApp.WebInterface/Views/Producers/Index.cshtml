@model IEnumerable<SztuderWiniecki.BikesApp.Interfaces.IProducer>

@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="mb-3">
    <div>
        <form asp-controller="Producers" asp-action="Index" method="get" class="col-12 col-xl-6 row">
            <div class="col-9">
                <input type="text" name="SearchString" placeholder="Search..." value=@ViewBag.SearchString class="form-control" />
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-primary"> <i class="bi bi-search"></i> </button>
            </div>
        </form>
    </div>
</div>

<p>
    <a href="@Url.Action("Create", "Producers")" class="btn btn-primary">
        <i class="me-2 bi bi-plus-square"></i>
        <span>
            Add producer
        </span>
    </a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                    <a href="@Url.Action("Edit", "Producers", new { item.Id })" class="btn btn-primary">
                        <i class="me-2 bi bi-pencil-square"></i>
                        <span>
                            Edit
                        </span>
                    </a>
                    <a href="@Url.Action("Details", "Producers", new { item.Id })" class="btn btn-primary">
                        <i class="me-2 bi bi-card-list"></i>
                        <span>
                            Details
                        </span>
                    </a>
                    <a href="@Url.Action("Delete", "Producers", new { item.Id })" class="btn btn-danger">
                        <i class="me-2 bi bi-trash3"></i>
                        <span>
                            Delete
                        </span>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
