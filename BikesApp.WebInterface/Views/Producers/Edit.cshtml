@model SztuderWiniecki.BikesApp.Interfaces.IProducer

@{
    ViewData["Title"] = "Edit";
}

@{
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>IProducer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <button type="submit" value="Save" class="btn btn-success">
                    <i class="me-2 bi bi-floppy"></i>
                    Save
                </button>
                <a href="@Url.Action("Index", "Producers")" class="btn btn-info">
                    <i class="me-2 bi bi-box-arrow-in-right"></i>
                    <span>
                        Back to List
                    </span>
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
