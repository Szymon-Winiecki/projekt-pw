<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewmodel="clr-namespace:SztuderWiniecki.BikesApp.MAUIInterface.ViewModels"
             x:Class="BikesApp.MAUIInterface.BikesIndexPage"
             Title="Bikes Collection">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior Command="{Binding SearchCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>


    <VerticalStackLayout>
        
        <Grid RowDefinitions="Auto,Auto" 
         ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto">

            <Label Grid.Column="0" Grid.Row="0" Text="Type" />
            <Picker Grid.Column="1" Grid.Row="0" SelectedItem="{Binding SelectedType}" ItemsSource="{Binding Types}">
            </Picker>

            <Label Grid.Column="2" Grid.Row="0" Text="Release year from" />
            <Entry Grid.Column="3" Grid.Row="0" Text="{Binding YearFrom}" />
            <Label Grid.Column="4" Grid.Row="0" Text="to" />
            <Entry Grid.Column="5" Grid.Row="0" Text="{Binding YearTo}" />

            <Label Grid.Column="0" Grid.Row="1" Text="Search" />
            <Entry Grid.Column="1" Grid.Row="1" Text="{Binding SearchString}" />

            <Button Text="Apply" Grid.Column="2" Grid.Row="1" Command="{Binding SearchCommand}" />
            <Button Text="Reset Filters" Grid.Column="3" Grid.Row="1" Command="{Binding ResetFiltersCommand}" />
            
        </Grid>

        <ListView ItemsSource="{Binding Bikes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Label Text="{Binding Name}" WidthRequest="200" />
                            <Label Text="{Binding Producer.Name}" WidthRequest="200" />
                            <Label Text="{Binding ReleaseYear}" WidthRequest="200" />
                            <Label Text="{Binding Type}" WidthRequest="200" />
                            <Button Text="Details" WidthRequest="150" Command="{Binding ShowDetailsCommand}" />
                            <Button Text="Edit" WidthRequest="150" Command="{Binding EditBikeCommand}" />
                            <Button Text="Delete" WidthRequest="150" Command="{Binding DeleteBikeCommand}" />
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <HorizontalStackLayout>
            <Button Text="Add" Command="{Binding CreateNewBikeCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>