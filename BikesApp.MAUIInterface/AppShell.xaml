<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BikesApp.MAUIInterface.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BikesApp.MAUIInterface"
    Shell.FlyoutBehavior="Disabled"
    Title="BikesApp.MAUIInterface">

    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Producers Catalog"
            ContentTemplate="{DataTemplate local:ProducersIndexPage}"
            Route="ProducersIndex" />
        <ShellContent
            Title="Bikes Catalog"
            ContentTemplate="{DataTemplate local:BikesIndexPage}"
            Route="BikesIndex" />
    </FlyoutItem>
    

</Shell>
