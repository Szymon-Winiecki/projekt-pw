<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SztuderWiniecki.BikesApp.MAUIInterface.ViewModels"
             x:Class="BikesApp.MAUIInterface.ProducerDeletePage"
             Title="ProducerDeletePage">
    <VerticalStackLayout>
        <Label 
         Text="Are you sure you want to remove this producer?"
         VerticalOptions="Center" 
         HorizontalOptions="Center" />
        <Grid RowDefinitions="Auto,Auto" 
          ColumnDefinitions="Auto,Auto"
          BindingContext="{Binding Producer}">
            <Label Grid.Column="0" Grid.Row="0" Text="Name" />
            <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}" />

            <Label Grid.Column="0" Grid.Row="1" Text="Address" />
            <Label Grid.Column="1" Grid.Row="1" Text="{Binding Address}" />
        </Grid>
        <HorizontalStackLayout>
            <Button Text="Delete" Command="{Binding DeleteCommand}" />
            <Button Text="Cancel" Command="{Binding BackCommand}" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>